!-------------------------------------------------------------------------------
! OSMOSIS turbulence model
!-------------------------------------------------------------------------------
! osm_sbl      [bool]
!                .true. for active surface boundary layer module
! osm_bbl      [bool]
!                .true. for active bottom boundary layer module
! osm_interior [bool]
!                .true. for active interior mixing
! h_i          [float, unit = m]
!                Initial surface boundary layer depth
!-------------------------------------------------------------------------------

&osm
   osm_sbl = .true.,
   osm_bbl = .false.,
   osm_interior = .true.,
   h_i = 50.0,
/

